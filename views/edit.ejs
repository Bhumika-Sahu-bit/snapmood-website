<%- include('partials/navbar') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Profile</title>
  <link
    rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
  >
  <style>
    body {
      background-color: #f8f9fa;
    }
    .edit-profile-container {
      max-width: 600px;
      margin: 50px auto;
      padding: 20px;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .edit-profile-header {
      text-align: center;
      margin-bottom: 20px;
    }
    .edit-profile-header h2 {
      font-weight: bold;
    }
    .edit-profile-form label {
      font-weight: 600;
    }
    .btn-custom {
      background-color: #007bff;
      color: #fff;
    }
    .btn-custom:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="edit-profile-container">
      <div class="edit-profile-header">
        <h2>Edit Profile</h2>
        <p>Update your profile image and bio below.</p>
      </div>
      <form
        action="/editprofile"
        method="POST"
        enctype="multipart/form-data"
        class="edit-profile-form"
      >
        
        <button type="submit" id="deletePhotoBtn" name="deletePhoto" value="true" class="btn btn-danger">Delete Profilepic</button>
        <div class="form-group">
          <label for="description">Bio</label>
          <textarea
            class="form-control"
            id="description"
            name="description"
            rows="4"
            placeholder="Write something about yourself..."
          ></textarea>
        </div>
        <button type="submit" class="btn btn-custom btn-block">Save Changes</button>
      </form>
    </div>
  </div>

  <script
    src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"
  ></script>

  <%- include('partials/footer') %>

  <script>
    const deleteprofile = document.getElementById("deletePhotoBtn");
    deleteprofile.addEventListener("click" , async () => {
      try {
        const response = await fetch("/profileImage" , {
        method:"DELETE",
      });

      if(response.ok){
        window.location.href="/profile";
      } else {
        window.location.href="/profile";
      }
    
      } catch (error) {
        console.error("Error:", error);
        alert("Something went wrong.");
      }
    })
  </script>
</body>
</html>
